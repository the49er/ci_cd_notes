pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh './gradlew release'
            }
        }


        stage('copy') {
                    steps {
                        sh 'cp /var/lib/jenkins/workspace/noteApp/notesApp.jar /root/notes'
                    }
                }

        stage('deploy') {
            steps {
                sh 'scp /var/lib/jenkins/workspace/noteApp/notesApp.jar root@159.89.107.231:/root/notesApp'
            }
        }
    }
}